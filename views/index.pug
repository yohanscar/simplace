extends layout

block content
  h1= title
  p Bem Vindo a #{title}
  div.top
    form.form-horizontal(method="get", id="searchForm", action="/resultado")
      fieldset
        label CEP
        input.span3(id="cep", type="text", name="cep", placeholder="0000-000")
        br
        label(for='value5') 5 Estrelas:
        input(type='radio' name='rating' value='5' checked )
        br
        label(for='value4') 4 Estrelas:
        input(type='radio' name='rating' value='4' )
        br
        label(for='value3') 3 Estrelas:
        input(type='radio' name='rating' value='3' )
        br
        label(for='value2') 2 Estrelas:
        input(type='radio' name='rating' value='2' )
        br
        label(for='value1') 1 Estrelas:
        input(type='radio' name='rating' value='1' )
        br
        input.btn(type="submit", value="Pesquisa")


  div.container
    div.content
  div.footer
